<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/background1">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/sincho"
        android:gravity="left|center"
        android:paddingLeft="10sp"
        android:text="EMPANZADO"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center" android:layout_marginLeft="10sp" android:layout_marginRight="10sp">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="Usuario" android:textColor="#000000" android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/emp_stop_user_edittext"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:hint="Usuario:"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="Barril:" android:textColor="#000000" android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/emp_stop_barril_edittext"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:hint="Barril"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center">"
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center">
            
            <Button 
                android:id="@+id/emp_stop_finish_button"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Finalizar"/>
            
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>