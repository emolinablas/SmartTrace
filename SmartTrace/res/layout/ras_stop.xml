<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/background1">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/sincho"
        android:gravity="left|center"
        android:paddingLeft="10sp"
        android:text="RASPADO"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center" android:layout_marginLeft="10sp" android:layout_marginRight="10sp">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="Usuario" android:textColor="#000000" android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/ras_stop_user_edittext"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:hint="Usuario:"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:text="Barril:" android:textColor="#000000" android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/ras_stop_barril_edittext"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:hint="Barril"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Inservibles: Tapadera/Barril" android:textColor="#000000" android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/ras_stop_inservible_tapadera_edittext"
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0"/>
            
            <EditText 
                android:id="@+id/ras_stop_inservible_barril_edittext"
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="NÃºmero de duelas de Barril" android:textColor="#000000" android:textStyle="bold"/>
            
            <EditText 
                android:id="@+id/ras_stop_duelas_edittext"
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="0"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView 
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Origen" android:textColor="#000000" android:textStyle="bold"/>
            
            <Spinner 
                android:id="@+id/ras_stop_origen_spinner"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center">
            
             <RadioGroup 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            
	            <RadioButton 
	                android:id="@+id/ras_stop_allend_radiobutton"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Fin Total"
	                android:checked="true" android:layout_marginRight="40sp" android:textColor="#000000"/>
	            
	            <RadioButton 
	                android:id="@+id/ras_stop_parcialend_radiobutton"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Fin Parcial" android:textColor="#000000"/>
            </RadioGroup>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center">
            
            <Button 
                android:id="@+id/ras_stop_finish_button"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Finalizar"/>
            
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>